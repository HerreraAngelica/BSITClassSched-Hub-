@model IEnumerable<BSIT.Models.Schedule>

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align: center; color: #4A90E2; font-family: 'Arial', sans-serif; font-size: 36px; font-weight: bold;">INDEX</h1>

<p style="text-align: center;">
    <a href="@Url.Action("Create")" style="background-color: #4CAF50; color: white; padding: 10px; text-decoration: none; border-radius: 5px; font-family: 'Verdana', sans-serif; font-size: 16px; font-weight: normal;">Create New</a>
</p>

<table class="table" style="border-collapse: collapse; width: 100%; margin: 20px auto; border: 2px solid #ddd; background-color: #ffffff;">
    <thead style="background-color: #4A90E2; color: white;">
        <tr>
            <th style="border: 1px solid #ddd; padding: 8px; font-family: 'Courier New', monospace; font-weight: bold;">
                @Html.DisplayNameFor(model => model.First().Class)
            </th>
            <th style="border: 1px solid #ddd; padding: 8px; font-family: 'Courier New', monospace; font-weight: bold;">
                @Html.DisplayNameFor(model => model.First().Day)
            </th>
            <th style="border: 1px solid #ddd; padding: 8px; font-family: 'Courier New', monospace; font-weight: bold;">
                @Html.DisplayNameFor(model => model.First().Subject)
            </th>
            <th style="border: 1px solid #ddd; padding: 8px; font-family: 'Courier New', monospace; font-weight: bold;">
                @Html.DisplayNameFor(model => model.First().Time)
            </th>
            <th style="border: 1px solid #ddd; padding: 8px; font-family: 'Courier New', monospace; font-weight: bold;">
                @Html.DisplayNameFor(model => model.First().Professor)
            </th>
            <th style="border: 1px solid #ddd; padding: 8px;"></th>
        </tr>
    </thead>
    <tbody style="background-color: #f9f9f9;">
        @foreach (var item in Model)
        {
            <tr>
                <td style="border: 1px solid #ddd; padding: 8px; background-color: #ffffff; font-family: 'Arial', sans-serif;">
                    @Html.DisplayFor(modelItem => item.Class)
                </td>
                <td style="border: 1px solid #ddd; padding: 8px; background-color: #ffffff; font-family: 'Arial', sans-serif;">
                    @Html.DisplayFor(modelItem => item.Day)
                </td>
                <td style="border: 1px solid #ddd; padding: 8px; background-color: #ffffff; font-family: 'Arial', sans-serif;">
                    @Html.DisplayFor(modelItem => item.Subject)
                </td>
                <td style="border: 1px solid #ddd; padding: 8px; background-color: #ffffff; font-family: 'Arial', sans-serif;">
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td style="border: 1px solid #ddd; padding: 8px; background-color: #ffffff; font-family: 'Arial', sans-serif;">
                    @Html.DisplayFor(modelItem => item.Professor)
                </td>
                <td style="border: 1px solid #ddd; padding: 8px; background-color: #ffffff;">
                    @Html.ActionLink("Edit", "Edit", new {  }, new { @style = "color: #FFA500; font-family: 'Arial', sans-serif;" }) |
                    @Html.ActionLink("Details", "Details", new {  }, new { @style = "color: #008CBA; font-family: 'Arial', sans-serif;" }) |
                    @Html.ActionLink("Delete", "Delete", new {  }, new { @style = "color: #FF5733; font-family: 'Arial', sans-serif;" })
                </td>
            </tr>
        }
    </tbody>
</table>
